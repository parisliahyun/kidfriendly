
 <div class="well">
 <h3>Create an activity:</h3> 

<div class="panel-body" id="activity-form">
  <%= form_for [current_user, @activity], :action => :create, :html => {:class => 'form',:role => 'form'} do |f| %>

  <div class="form group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
 
  <div class="form group">
    <%= f.label :image_url %>
    <%= f.text_field :image_url, class: "form-control" %>
  </div>
  
  <div class="form group">
    <%= f.label :description %></br> 
    <%= f.text_field :description, class: "form-control" %></br>
  </div>  

  <div class="form group">
    <%= f.label :tag_list, "Tag" %><br />
    <%= f.text_field :tag_list, class: "form-control" %>
  </div> 
 
  <div class="form group">
    <%= f.label :price %></br> 
    <%= f.number_field :price, class: "form-control" %></br> 
  </div> 

   <br>
   <br>
  <%= f.submit nil, class: "btn btn-primary" %>
   <% end %> 

</div>
</div>

