<h6>Create an activity:</h6>
<div class="well">
  <div class="panel-body">
    <%= form_for [@activity], :action => :create, :html => {:class => 'form',:role => 'form'} do |f| %>

    <div class="form group">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
   
    <div class="form group">
      <%= f.label :image_url %>
      <%= f.text_field :image_url %>
    </div>

    <div class="form group">
      <%= f.label :headline %></br> 
      <%= f.text_field :headline, class: "form-control" %></br>
    </div> 
    
    <div class="form group">
      <%= f.label :description %></br> 
      <%= f.text_field :description %></br>
    </div>  

    <div class="form group">
      <%= f.label :age_range %></br> 
      <%= f.text_field :age_range, class: "form-control" %></br>
    </div> 

    <div class="form group">
      <%= f.label :tag_list, "Tag" %><br />
      <%= f.text_field :tag_list %>
    </div> 

    <div class="form group">
      <%= f.label :venue %></br> 
      <%= f.text_field :venue, class: "form-control" %></br>
    </div>

    <div class="form group">
      <%= f.label :price %></br> 
      <%= f.number_field :price %></br> 
    </div> 
     <br>
     <br>
    <%= f.submit nil, class: "btn btn-primary" %>
     <% end %> 
  </div>
</div>

