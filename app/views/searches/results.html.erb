<div class="container"> 
  <%= render 'form' %>
  <h2>RESULTS FOR <%= @activity.tag_list.to_s.upcase %></h2>
  <div class="row">
  <% @matching_activities.each do |activity| %>
  <div class="col-md-4">
     <a href="<%= activity_path(activity.id) %>" class="thumbnail">
      <img class="activities" src="<%= activity.image_url %>" alt="activity image" height="280px" width="355px">
      <h7 class="hover-text" style="vertical-align: middle !important"><%= activity.description %></h7>  
    </a>
  </div>
  <% end %>
  </div>  
</div>